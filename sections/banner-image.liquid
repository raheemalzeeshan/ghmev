{{ 'banner-image.css' | asset_url | stylesheet_tag }}

<!-- Banner -->
<section class="banner">
  <div class="banner-container">
    <div class="banner-image">
      {% if section.settings.select-bannerimage != blank %}
        <img src="{{ section.settings.select-bannerimage |  img_url: 'master' }}"alt="{{ section.settings.select-bannerimage.image.alt }}"loading="lazy" />
      {% else %}
        {{ 'lifestyle-2' | placeholder_svg_tag: "placeholder-lifestyle-2" }}
      {% endif %}
    </div>

    <div class="banner-content">
      <div class="banner-content-container container">
        {% for block in section.blocks %}
          {% if block.settings.banner-image-heading != blank %}
            <h2>{{ block.settings.banner-image-heading }}</h2>
          {% endif %}

          {% if block.settings.banner-image-paragraph-line != blank %}
            <p>{{ block.settings.banner-image-paragraph-line }}</p>
          {% endif %}

          {% if block.settings.banner-image-btn-text != blank %}
            <a
              href="{{ block.settings.banner-image-btn-link }}"
              class="order-now-btn"
              rel="noopener noreferrer">
              {{ block.settings.banner-image-btn-text }}
            </a>
          {% endif %}

        {% endfor %}
      </div>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Banner Image",
    "tag": "section",
    "class": "banner-image-section",
    "settings": [
      {
        "type": "image_picker",
        "label": "Select banner image",
        "id": "select-bannerimage"
      }
    ],
    "blocks": [
      {
        "name": "Heading",
        "type": "text",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "label": "Heading",
            "id": "banner-image-heading",
            "default": "Image banner"
          }
        ]
      }, {
        "name": "Paragraph",
        "type": "paragraph",
        "limit": 1,
        "settings": [
          {
            "type": "inline_richtext",
            "label": "Description",
            "id": "banner-image-paragraph-line",
            "default": "Give customers details about the banner image(s) or content on the template"
          }
        ]
      }, {
        "name": "Button",
        "type": "button",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "label": "Button Text",
            "id": "banner-image-btn-text",
            "default": "Button Label"
          }, {
            "type": "url",
            "label": "Button link",
            "id": "banner-image-btn-link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Banner Image"
      }
    ]
  }
{% endschema %}
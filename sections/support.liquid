{{ 'page.css' | asset_url | stylesheet_tag }}
{% style %}
  .page-container {
    padding-top: {{ section.settings.support_padding_top -}}px;
    padding-bottom: {{ section.settings.support_padding_bottom -}}px;
  }
{% endstyle %}
<section class="page-banner-wrapper">
  <div class="page-banner-container page-container container">
      <article>
        {{ page.content }}
      </article>
  </div>
  </div>
</section>

{% schema %}
  {
    "name": "Page setting",
    "settings": [
      {
        "type": "range",
        "label": "Top padding",
        "id": "support_padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 0
      },
      {
        "type": "range",
        "label": "Bottom padding",
        "id": "support_padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 0
      }
    ]
  }
{% endschema %}